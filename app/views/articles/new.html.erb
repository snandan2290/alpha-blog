<h1> Create a new Article</h1>

<% if @article.errors.any?%>
  <h2>Following ERROR's prevented the article from being saved</h2>
  <% @article.errors.full_messages.each do |err_msg|%>
    <li><%= err_msg %></li>
  <% end %>
<% end %>

<%= form_with scope: :article, url: articles_path, local: true do |f|  %>
  <p>
    <%= f.label :title %><br/>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %><br/>
    <%= f.text_area :description %>
  </p>  
 <%= f.submit %>
<% end %>